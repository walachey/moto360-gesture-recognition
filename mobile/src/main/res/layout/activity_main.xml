<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Accelerometer"
            android:gravity="center_vertical|left" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button"
            android:id="@+id/startButton"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/stopButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_button"
            android:id="@+id/stopButton"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/lable_X"
            android:text="@string/label_X"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/axisX"
            android:ems="10"
            android:background="#ffe8faff"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/lable_X" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/label_Y"
            android:text="@string/label_Y"
            android:textSize="22sp"
            android:layout_toEndOf="@id/axisX" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:ems="10"
            android:background="#ffe8faff"
            android:id="@+id/axisY"
            android:layout_toEndOf="@id/label_Y" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/label_Z"
            android:text="@string/label_Z"
            android:textSize="22sp"
            android:layout_toEndOf="@id/axisY" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:ems="10"
            android:background="#ffe8faff"
            android:id="@+id/axisZ"
            android:layout_toEndOf="@id/label_Z" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/textView2Xlab"
            android:text="@string/label_X"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/textView2X"
            android:ems="10"
            android:background="@android:color/holo_blue_light"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/textView2Xlab" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView2Ylab"
            android:text="@string/label_Y"
            android:textSize="22sp"
            android:layout_toEndOf="@id/textView2X" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:ems="10"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/textView2Y"
            android:layout_toEndOf="@id/textView2Ylab" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView2ZLab"
            android:text="@string/label_Z"
            android:textSize="22sp"
            android:layout_toEndOf="@id/textView2Y" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:ems="10"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/textView2Z"
            android:layout_toEndOf="@id/textView2ZLab" />
    </RelativeLayout>

