    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set sensor delta"
            android:id="@+id/setDeltaButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/deltaTextField"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignBottom="@+id/setDeltaButton"
            android:layout_alignParentStart="true"
            android:hint="0.2"
            android:layout_marginLeft="10pt"
            android:imeActionLabel="setSensorDelta"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="den Arm vom Elbogen nach oben bewegen"
            android:id="@+id/gest1Description"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2pt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button"
            android:id="@+id/startTrigger"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="startGestureRecognition" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_button"
            android:id="@+id/button2"
            android:onClick="stopGestureRecognition"
            android:layout_alignTop="@+id/startTrigger"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gestute 1"
            android:id="@+id/textGestute1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="den Arm horizontal link und recht bewegen "
            android:id="@+id/gest2Description"
            android:layout_marginLeft="2pt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button"
            android:id="@+id/startRecogGesture2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="startGestureRecognition" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_button"
            android:id="@+id/stopRecogGesture2"
            android:onClick="stopGestureRecognition"
            android:layout_alignTop="@+id/startRecogGesture2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gestute 2"
            android:id="@+id/textGesture2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get sensor list"
            android:id="@+id/getSensorListButton"
            android:onClick="listSensors"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START DRAWING"
            android:id="@+id/startDrawingButton"
            android:layout_alignBottom="@+id/getSensorListButton"
            android:layout_alignParentEnd="true"
            android:onClick="drawSensors" />
    </RelativeLayout>
</LinearLayout>

